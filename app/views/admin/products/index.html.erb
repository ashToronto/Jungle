<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Products</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
      <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

      <tbody>
        <% Category.all.each do |category| %>
       <li><%= link_to category.name, category %></li>
     <% end %>
      </tbody>
    </table>

  </div>

</section>
